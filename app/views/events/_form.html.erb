<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= datetime_select("event", "start", :default => 3.days.from_now) %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :venue %><br />
    <%= collection_select(:event, :venue_id, Venue.all, :id, :name, options ={:prompt => "-Select a venue"}, :class =>"venue") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

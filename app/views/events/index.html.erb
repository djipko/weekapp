<h1>Listing <%= @all %> events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>At</th>
    <th>Starts</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.venue.name %></td>
    <td><%= event.start.strftime('%a %d %B, %Y at %H:%M') %></td>
    <td><%= distance_of_time_in_words_to_now(event.created_at)%> ago</td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
<% if @all == ''%>
    <%= link_to 'All Events', all_events_events_path %>
<% else %>
    <%= link_to 'Future Events', events_path %>
<% end %>
<%= link_to 'Venues', venues_path %>
